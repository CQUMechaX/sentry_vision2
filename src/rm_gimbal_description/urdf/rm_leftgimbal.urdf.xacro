<?xml version="1.0" encoding="utf-8"?>

<robot name="rm_leftgimbal"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="leftxyz" default="0.00 0.060 0.042" />
  <xacro:arg name="leftrpy" default="0 ${pi/2} 0" />

  <link name="leftodom" />

  <link name="leftgimbal_link" />

  <joint name="leftgimbal_joint" type="floating">
    <parent link="leftodom" />
    <child link="leftgimbal_link" />
  </joint>

  <link name="leftcamera_link" />

  <joint name="leftcamera_joint" type="fixed">
    <origin xyz="$(arg leftxyz)" rpy="$(arg leftrpy)" />
    <parent link="leftgimbal_link" />
    <child link="leftcamera_link" />
    <axis xyz="0 0 0" />
  </joint>

  <link name="leftcamera_optical_frame" />

  <joint name="leftcamera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="leftcamera_link" />
    <child link="leftcamera_optical_frame" />
  </joint>

</robot>
